@model HoneyMustard.Web.Models.StudentFinanceModel
    @using HoneyMustard.Web.Models

@{
    ViewBag.Title = "Student";
}
<div style="text-align:right">
    <img src="http://compuskills.org/wptest/wp-content/uploads/2014/08/logoaug141.png" alt="Honey Mustard Project" style="height:100px;margin:4px"></>
</div>
<h2 style="text-align:center">Student Finance</h2>

<div>
    <hr />
    <table class="table-bordered table-condensed table-hover table-striped" align="center">
        <tr>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.Phone)
            </td>
            <td>
                @Html.DisplayFor(model => model.CellPhone)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Address)
            </td>
            <td>
                @Html.DisplayFor(model => model.EmailAddress)
            </td>
        </tr>

    </table>
</div>
    <table class="table-bordered table-condensed table-hover table-striped" align="right">
        <thead>
            <tr>
                <th>Course name</th>
                <th>Agreed Price</th>
                <th>Amount Paid</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (StudentTableRowModels student in Model.Payments)
            {
                <tr>
                    <td>@student.CourseName</td>
                    <td>@student.AgreedPrice</td>
                    <td>@student.AmountPaid</td>
                    <td>@student.Balance</td>
                </tr>
            }
        </tbody>
    </table>
  <div>
    <input placeholder="Amount" />
  </div>
<br />
  <div>
      <input id="datepicker" value="Date"  />
      <script>
          $(document).ready(function () {
              $("#datepicker").kendoDatePicker();
          });
     </script>
  </div>
<br />
   <div>Payment Method</div>
    @Html.DropDownList("paymentmetodidnew", Model.PaymentMethod)
<br/>
<br />
   <div>Courses</div>
    @Html.DropDownList("coursesidnew", Model.Courses)
    <br />
<br/>
   <div>
    <button type="button" class="btn btn-success">Add Payment</button>
    </div>


