@model HoneyMustard.Web.Models.EmployeeFinanceModel
    @using HoneyMustard.Web.Models
@{
    ViewBag.Title = "Employee";
}
<div style="text-align:right">
    <img src="http://compuskills.org/wptest/wp-content/uploads/2014/08/logoaug141.png" alt="Honey Mustard Project" style="height:100px;margin:4px"></>
</div>
<h2 style="text-align:center">Employee</h2>
<div>
    <hr />
    <table class="table-condensed " align="center">
<tr>
        <td>
            @Html.DisplayFor(model => model.Name)
        </td>
    <td></td>
        <td>
            @Html.DisplayFor(model => model.Phone)
        </td>
        <td>
            @Html.DisplayFor(model => model.CellPhone)
        </td>
    </tr>
        <tr>
        <td>
            @Html.DisplayNameFor(model => model.Address)
        </td>
    <td></td>
        <td>
            @Html.DisplayFor(model => model.EmailAddress)
        </td>
    <td></td>
    </tr>
        </table>
</div>
    <table class="table-bordered table-condensed table-hover table-striped" align="right">
        <thead>
            <tr>
                <th>Amount Paid</th>
                <th>Date</th>
                <th>Payment Method</th>
            </tr>
        </thead>
        <tbody>
           @foreach (EmployeeTableRowModels employee in Model.Payments)
           {
               <tr>
                   <td>@employee.AmountPaid</td>
                   <td>@employee.Date.ToShortDateString()</td>
                   <td>@employee.PaymentMethod</td>
               </tr>
           }
        </tbody>
    </table>
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.ContactID)
<div>
    <input placeholder="Amount" name="AmountPaid"/>
</div>
<br />
<div>
    <input id="datepicker" value="Date" name="Date" />
    <script>
          $(document).ready(function () {
              $("#datepicker").kendoDatePicker();
          });
    </script>
</div>
<br />
<div>Payment Method</div>
@Html.DropDownList("paymentMethod", Model.PaymentTypes)
<br />
<br />
<div>
    <button type="submit" class="btn btn-success">Add Payment</button>
</div>
}